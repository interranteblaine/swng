{
  "name": "swng",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "gen": "ts-node tools/generate.ts",
    "build": "pnpm -r build",
    "validate": "pnpm lint && pnpm build && pnpm test",
    "dev:web": "pnpm -F @swng/web dev",
    "build:web": "pnpm -F @swng/web build",
    "preview:web": "pnpm -F @swng/web preview",
    "cdk:bootstrap": "pnpm -F @swng/infra-cdk cdk bootstrap",
    "cdk:synth": "pnpm -F @swng/infra-cdk cdk synth",
    "cdk:diff": "pnpm -F @swng/infra-cdk cdk diff",
    "cdk:deploy": "pnpm -F @swng/infra-cdk cdk deploy",
    "cdk:destroy": "pnpm -F @swng/infra-cdk cdk destroy",
    "cdk:guard": "node -e \"if(!process.env.AWS_PROFILE){console.error('Set AWS_PROFILE before running CDK');process.exit(1)}\"",
    "cdk:deploy:safe": "pnpm run cdk:guard && pnpm run cdk:deploy"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/yargs": "^17.0.35",
    "ejs": "^3.1.10",
    "eslint": "^9.39.1",
    "fs-extra": "^11.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.9",
    "yargs": "^18.0.0",
    "@types/node": "^22.7.9"
  }
}
